<div class="col-sm-2 about-me about-side text-center hidden-xs">
		<%- image_tag('images/profiler-round2.png', {width:200, class:'profile-pic img-responsive center-block'}) %>
		<h1><%= config.author %></h1>
		<h2><%= theme.author_description %></h2>
		<h3><%= theme.topics %></h3>

		<div class="text-center" style="margin-top: 20px;">
			<a href="<%= theme.link_twitter %>" class="cta-icon"><i class="devicon-twitter-plain colored"></i></a>
			<a href="<%= theme.link_github %>" class="cta-icon"><i class="devicon-github-plain colored"></i></a>
			<a href="<%= theme.link_linkedin %>" ><%- image_tag('images/linkedin.png', {height:29, width:29, class:'hobby-iconX2'}) %></a>
			<a href="<%= theme.link_stack %>" ><%- image_tag('images/stackoverflow.png', {height:29, width:29, class:'hobby-iconX2'}) %></a>
		</div>

		<div class="text-center" style="margin-top: 20px;">
			<%- partial('_partial/hobbies') %>
		</div>
		<div class="text-center" style="margin-top: 20px;">
			<% theme.widgets.forEach(function(widget){ %>
			    <%- partial('_widget/' + widget) %>
			<% }) %>
		</div>
</div>

<div class="text-center about-me hidden-sm hidden-md hidden-lg">
		<%- image_tag('images/profiler-round2.png', {width:200, class:'profile-pic img-responsive center-block'}) %>
		<h1><%= config.author %></h1>
		<h2><%= theme.author_description %></h2>
		<h3><%= theme.topics %></h3>

	<div class="text-center" style="margin:20px">
	</div>
</div>